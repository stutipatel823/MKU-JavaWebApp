<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <listener-class>
            com.mku.payment.resources.MyAppServletContextListener 
        </listener-class>
    </listener>
    <!--Jersey REST Servlet--> 
    <servlet>
        <servlet-name>PaymentREST</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class> <!--IMPORTANT Syntax-->
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name> <!--IMPORTANT Syntax-->
            <param-value>com.mku.payment.resources</param-value> <!--Set value to package or the groupID-->

        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentREST</servlet-name> <!--Give a name to the servlet--> 
        <url-pattern>/api/*</url-pattern> <!--IMPORTANT: when searching the url must contain this-->
    </servlet-mapping>
    
